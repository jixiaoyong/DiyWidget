<?xml version="1.0" encoding="utf-8"?>
<resources>

    <attr name="background_color" format="color" />
    <attr name="forward_color" format="color" />
    <attr name="stroke_color" format="color" />

    <declare-styleable name="ToggleButtonPlus">
        <attr name="background_color" />
        <attr name="forward_color" />
        <attr name="stroke_color" />

    </declare-styleable>
    <declare-styleable name="ProgressButton">
        <attr name="background_color" />
        <attr name="forward_color" />
        <attr name="stroke_color" />

        <attr name="max_progress" format="integer" />
        <attr name="radius" format="dimension" />
        <attr name="textSize" format="float" />

    </declare-styleable>

    <declare-styleable name="RoundImageView">
        <attr name="imageType" format="enum">
            <enum name="circle" value="0" />
            <enum name="roundImage" value="1" />
        </attr>
    </declare-styleable>


    <declare-styleable name="BannerView">
        <attr name="indicatorType">
            <enum name="point" value="0" />
            <enum name="text" value="1" />
            <enum name="none" value="-1" />
        </attr>
    </declare-styleable>

</resources>