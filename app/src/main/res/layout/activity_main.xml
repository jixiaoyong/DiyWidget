<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="cf.android666.diywidget.MainActivity">

    <cf.android666.applibrary.ToggleButtonPlus
        android:id="@+id/toggle_button"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:textOff="off"
        android:textOn="on" />

    <cf.android666.applibrary.ToggleButtonPlus
        android:id="@+id/toggle_button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textOff="off"
        android:textOn="on" />

    <cf.android666.applibrary.ProgressButton
        android:id="@+id/progress"
        android:layout_width="134dp"
        android:layout_height="37dp"
        android:layout_gravity="center" />

    <Button
        android:text="show dialog"
        android:id="@+id/click_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:text="GO_SCALE_ACTIVITY"
        android:id="@+id/go_scale_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>
