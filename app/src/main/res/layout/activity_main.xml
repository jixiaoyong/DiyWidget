<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <cf.android666.applibrary.AutomateLoadingListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="300dp">

    </cf.android666.applibrary.AutomateLoadingListView>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:context="cf.android666.diywidget.MainActivity">

            <cf.android666.applibrary.ToggleButtonPlus
                android:id="@+id/toggle_button"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:textOff="off"
                android:textOn="on" />

            <cf.android666.applibrary.ToggleButtonPlus
                android:id="@+id/toggle_button1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textOff="off"
                android:textOn="on" />

            <cf.android666.applibrary.ProgressButton
                android:id="@+id/progress"
                android:layout_width="134dp"
                android:layout_height="37dp"
                android:layout_gravity="center" />

            <Button
                android:id="@+id/click_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="show dialog" />

            <Button
                android:id="@+id/go_scale_activity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GO_SCALE_ACTIVITY" />

            <cf.android666.applibrary.ColorfulTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hello World" />

            <cf.android666.diywidget.view.SineView
                android:layout_width="200dp"
                android:layout_height="200dp" />

            <cf.android666.diywidget.view.ColorfulSineView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginBottom="20dp" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="30dp"
                android:background="@drawable/round_bg"
                android:elevation="10dp" />

            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="10dp">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@drawable/round_bg" />
            </android.support.v7.widget.CardView>

            <TextView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="30dp"
                android:background="@drawable/shadow"
                android:elevation="10dp" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="200dp"
                android:layout_margin="30dp"
                android:background="@drawable/shadow_222958"
                android:elevation="10dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_margin="30dp"
                android:background="@drawable/shadow_222958"
                android:elevation="10dp"
                android:padding="30dp"
                android:text="dd#fff" />


        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>
